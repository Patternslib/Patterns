    "name": "Patterns developers"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/patternslib/patterns/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Patternslib/patterns.git"
  },
  "dependencies": {
    "@stomp/stompjs": "^5.4.4",
    "chokidar": "^3.3.1",
    "core-js": "3",
    "ev-emitter": "1.1.0",
    "fullcalendar": "2.9.1",
    "google-code-prettify": "^1.0.5",
