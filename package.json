    "intersection-observer": "^0.7.0",
    "jquery": "^3.5.0",
    "jquery-jcrop": "^0.9.13",
    "logging": "https://github.com/Patternslib/logging.git",
    "masonry-layout": "^4.2.2",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "parsleyjs": "^2.9.1",
    "photoswipe": "^4.1.3",
    "pikaday": "^1.8.0",
