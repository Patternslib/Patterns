    "slick-carousel": "1.8.1",
    "slides": "https://github.com/Patternslib/slides.git",
    "spectrum-colorpicker": "1.8.0",
    "stickyfilljs": "https://github.com/syslabcom/stickyfill.git",
    "tippy.js": ">=5.2.0",
    "underscore": "^1.9.1",
    "validate.js": "0.11.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.6",
    "@testing-library/jest-dom": "^5.5.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "eslint": "^7.0.0",
    "expose-loader": "^0.7.5",
    "imports-loader": "^0.8.0",
    "jest": "^26.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "playwright": "^0.16.0",
    "raw-loader": "^4.0.1",
    "regenerator-runtime": "^0.13.5",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^2.3.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --config webpack/dev.config.js --open",
    "build": "NODE_ENV=production webpack --config webpack/prod.config.js",
    "showwhy": "NODE_ENV=production webpack --config webpack/prod.config.js --display-modules --display-reasons",
    "test": "jest --watch",
    "testonce": "jest"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "rules": {}
  },
  "jest": {
    "rootDir": "./src",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "https://gitub.com/Patternslib/Patterns",
  "docs": "http://patternslib.com/",
  "maintainers": [
    {
      "name": "Syslab.com GmbH",
